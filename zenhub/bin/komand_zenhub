#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_zenhub import connection, actions, triggers


Name = 'ZenHub'
Vendor = 'rapid7'
Version = '1.0.1'
Description = 'The ZenHub plugin allows for agile project management in GitHub'


class ICONZenhub(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.AddIssueToEpic())

        self.add_action(actions.ConvertEpicToIssue())

        self.add_action(actions.ConvertIssueToEpic())

        self.add_action(actions.GetEpicData())

        self.add_action(actions.GetIssueData())

        self.add_action(actions.GetIssueEvents())

        self.add_action(actions.GetRepositoryBoardData())

        self.add_action(actions.GetRepositoryEpics())

        self.add_action(actions.MoveIssueBetweenPipelines())

        self.add_action(actions.RemoveIssueFromEpic())

        self.add_action(actions.SetEstimateForIssue())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONZenhub())
    cli.run()


if __name__ == "__main__":
    main()
