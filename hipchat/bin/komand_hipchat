#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_hipchat import connection, actions, triggers


Name = 'HipChat'
Vendor = 'rapid7'
Version = '1.0.1'
Description = 'The HipChat plugin can send and receive messages along with managing users'


class ICONHipchat(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_trigger(triggers.LatestMessage())

        self.add_action(actions.Create())

        self.add_action(actions.Delete())

        self.add_action(actions.Post())

        self.add_action(actions.Update())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONHipchat())
    cli.run()


if __name__ == "__main__":
    main()
