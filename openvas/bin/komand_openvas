#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_openvas import connection, actions, triggers


Name = 'OpenVAS'
Vendor = 'rapid7'
Version = '1.0.1'
Description = 'Allows users to perform common tasks such as starting, stopping, deleting and scheduling scans from an OpenVAS server'


class ICONOpenvas(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_trigger(triggers.CheckScanDone())

        self.add_action(actions.CreatePortList())

        self.add_action(actions.CreateSchedule())

        self.add_action(actions.CreateTarget())

        self.add_action(actions.DeleteScan())

        self.add_action(actions.DeleteTarget())

        self.add_action(actions.GetAllScans())

        self.add_action(actions.GetFinishedScans())

        self.add_action(actions.GetReportHtml())

        self.add_action(actions.GetReportXml())

        self.add_action(actions.GetRunningScans())

        self.add_action(actions.GetScanConfigs())

        self.add_action(actions.LaunchScan())

        self.add_action(actions.ScanStatus())

        self.add_action(actions.StopScan())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONOpenvas())
    cli.run()


if __name__ == "__main__":
    main()
