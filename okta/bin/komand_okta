#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "Okta"
Vendor = "rapid7"
Version = "3.5.1"
Description = "Secure identity management and single sign-on to any application"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import komand
    from komand_okta import connection, actions, triggers

    class ICONOkta(komand.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_trigger(triggers.UsersAddedRemovedFromGroup())

            self.add_action(actions.AddUserToGroup())

            self.add_action(actions.AssignUserToAppSso())

            self.add_action(actions.CreateUser())

            self.add_action(actions.DeactivateUser())

            self.add_action(actions.DeleteUser())

            self.add_action(actions.GetFactors())

            self.add_action(actions.GetUser())

            self.add_action(actions.ListGroups())

            self.add_action(actions.RemoveUserFromGroup())

            self.add_action(actions.ResetFactors())

            self.add_action(actions.SendPush())

            self.add_action(actions.SuspendUser())

            self.add_action(actions.UnsuspendUser())

            self.add_action(actions.UpdateBlacklistZones())


    """Run plugin"""
    cli = komand.CLI(ICONOkta())
    cli.run()


if __name__ == "__main__":
    main()
