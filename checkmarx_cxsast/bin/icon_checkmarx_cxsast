Name = 'Checkmarx CxSAST'
Vendor = 'rapid7'
Version = '1.0.0'
Description = 'Static analysis solution used to identify security vulnerabilities in custom code and open source components'


class ICONCheckmarxCxsast(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name, 
                vendor=Vendor, 
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.CreateBranchedProject())

        self.add_action(actions.CreateProject())

        self.add_action(actions.CreateScan())

        self.add_action(actions.DefineScanSettings())

        self.add_action(actions.GetScanDetails())


