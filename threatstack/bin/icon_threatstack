import insightconnect_plugin_runtime
from icon_threatstack import connection, actions, triggers


Name = "Threat Stack"
Vendor = "rapid7"
Version = "2.0.0"
Description = "Get information about alerts, assets, policies, and more"


class ICONThreatstack(insightconnect_plugin_runtime.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name, 
                vendor=Vendor, 
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.GetAgent())

        self.add_action(actions.GetAgents())

        self.add_action(actions.GetAlert())

        self.add_action(actions.GetAlerts())

        self.add_action(actions.GetEvents())

        self.add_action(actions.GetRule())


def main():
    """Run plugin"""
    cli = insightconnect_plugin_runtime.CLI(ICONThreatstack())
    cli.run()


if __name__ == "__main__":
    main()
