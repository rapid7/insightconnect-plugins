import komand
from icon_chardet import connection, actions, triggers


Name = 'Chardet'
Vendor = 'rapid7'
Version = '1.0.2'
Description = 'This plugin is a Python compatible character encoding detector'


class ICONChardet(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name, 
                vendor=Vendor, 
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.DetectEncoding())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONChardet())
    cli.run()


if __name__ == "__main__":
    main()
