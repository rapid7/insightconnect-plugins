#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_url_expander import connection, actions, triggers


Name = 'URL Expander'
Vendor = 'rapid7'
Version = '1.1.2'
Description = 'Expands a shortened URL'


class ICONUrlExpander(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.Expand())

        self.add_action(actions.ExpandAll())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONUrlExpander())
    cli.run()


if __name__ == "__main__":
    main()
