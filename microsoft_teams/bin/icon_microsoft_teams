#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from icon_microsoft_teams import connection, actions, triggers


Name = 'Microsoft Teams'
Vendor = 'rapid7'
Version = '1.1.0'
Description = 'Microsoft Teams actions and triggers'


class ICONMicrosoftTeams(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name, 
                vendor=Vendor, 
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_trigger(triggers.NewMessageReceived())

        self.add_action(actions.GetChannelsForTeam())

        self.add_action(actions.GetTeams())

        self.add_action(actions.SendHtmlMessage())

        self.add_action(actions.SendMessage())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONMicrosoftTeams())
    cli.run()


if __name__ == "__main__":
    main()
