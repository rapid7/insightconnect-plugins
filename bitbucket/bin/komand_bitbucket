#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_bitbucket import connection, actions, triggers


Name = "Bitbucket"
Vendor = "rapid7"
Version = "1.0.2"
Description = "This plugin allows management of your Bitbucket account using its API"


class ICONBitbucket(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_trigger(triggers.Issue())

        self.add_action(actions.CreateIssue())

        self.add_action(actions.CreateRepo())

        self.add_action(actions.DeleteRepo())

        self.add_action(actions.User())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONBitbucket())
    cli.run()


if __name__ == "__main__":
    main()
