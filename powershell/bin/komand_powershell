#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_powershell import connection, actions, triggers


Name = 'PowerShell'
Vendor = 'rapid7'
Version = '2.1.2'
Description = 'The PowerShell plugin runs a PowerShell script on a remote host or locally on the InsightConnect Orchestrator'


class ICONPowershell(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.ExecuteScript())

        self.add_action(actions.PowershellString())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONPowershell())
    cli.run()


if __name__ == "__main__":
    main()
