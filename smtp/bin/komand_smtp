import komand
from komand_smtp import connection, actions, triggers


Name = 'SMTP'
Vendor = 'rapid7'
Version = '2.0.3'
Description = 'Simple Mail Transfer Protocol (SMTP) is an Internet standard for electronic mail (email) transmission'


class ICONSmtp(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.Send())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONSmtp())
    cli.run()


