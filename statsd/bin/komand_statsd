#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_statsd import connection, actions, triggers


Name = 'Statsd'
Vendor = 'rapid7'
Version = '1.0.1'
Description = 'The Statsd plugin will allow you to create metrics from your workflow'


class ICONStatsd(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.Decr())

        self.add_action(actions.Gauge())

        self.add_action(actions.Incr())

        self.add_action(actions.Set())

        self.add_action(actions.Timing())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONStatsd())
    cli.run()


if __name__ == "__main__":
    main()
