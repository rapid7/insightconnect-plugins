#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "Trend Micro Apex"
Vendor = "rapid7"
Version = "4.0.0"
Description = "Report suspicious objects and files to block on Apex firewall"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import komand
    from icon_trendmicro_apex import connection, actions, triggers

    class ICONTrendmicroApex(komand.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_action(actions.AddFileToUdsoList())

            self.add_action(actions.Blacklist())

            self.add_action(actions.DeleteOpeniocFile())

            self.add_action(actions.DownloadOpeniocFile())

            self.add_action(actions.DownloadRcaCsvFile())

            self.add_action(actions.GetAgentStatus())

            self.add_action(actions.GetRcaObject())

            self.add_action(actions.OpeniocFilesList())

            self.add_action(actions.Quarantine())

            self.add_action(actions.SearchAgents())

            self.add_action(actions.UploadOpeniocFile())


    """Run plugin"""
    cli = komand.CLI(ICONTrendmicroApex())
    cli.run()


if __name__ == "__main__":
    main()
