#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_bhr import connection, actions, triggers


Name = 'BHR'
Vendor = 'rapid7'
Version = '1.0.1'
Description = 'The Black Hole Router plugin is use to assist with managing networks blocked within Black Hole Router site'


class ICONBhr(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.Block())

        self.add_action(actions.GetList())

        self.add_action(actions.Mblock())

        self.add_action(actions.Query())

        self.add_action(actions.Stats())

        self.add_action(actions.Unblock())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONBhr())
    cli.run()


if __name__ == "__main__":
    main()
