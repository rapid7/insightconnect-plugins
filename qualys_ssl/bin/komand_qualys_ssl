import komand
from komand_qualys_ssl import connection, actions, triggers


Name = 'Qualys SSL Labs'
Vendor = 'rapid7'
Version = '1.0.1'
Description = 'The Qualys SSL plugin allows the user to get information and test SSL servers'


class ICONQualysSsl(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.Analyze())

        self.add_action(actions.Certificate())

        self.add_action(actions.Endpoint())

        self.add_action(actions.Info())

        self.add_action(actions.Status())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONQualysSsl())
    cli.run()


if __name__ == "__main__":
    main()
