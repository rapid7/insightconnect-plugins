#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "Rapid7 AttackerKB"
Vendor = "rapid7"
Version = "1.0.3"
Description = "AttackerKB is a knowledge base of vulnerabilities and informed opinions on what makes them valuable (or not) targets for exploitation"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import komand
    from icon_rapid7_attackerkb import connection, actions, triggers

    class ICONRapid7Attackerkb(komand.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_action(actions.Assessment())

            self.add_action(actions.Assessments())

            self.add_action(actions.Topic())

            self.add_action(actions.Topics())


    """Run plugin"""
    cli = komand.CLI(ICONRapid7Attackerkb())
    cli.run()


if __name__ == "__main__":
    main()
