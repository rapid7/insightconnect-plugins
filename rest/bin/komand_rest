#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "HTTP Requests"
Vendor = "rapid7"
Version = "4.0.0"
Description = "The HTTP Requests plugin to make it easy to integrate with RESTful services"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import komand
    from komand_rest import connection, actions, triggers

    class ICONRest(komand.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_action(actions.Delete())

            self.add_action(actions.Get())

            self.add_action(actions.Patch())

            self.add_action(actions.Post())

            self.add_action(actions.Put())


    """Run plugin"""
    cli = komand.CLI(ICONRest())
    cli.run()


if __name__ == "__main__":
    main()
