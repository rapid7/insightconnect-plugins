#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_docker_engine import connection, actions, triggers


Name = 'Docker Engine'
Vendor = 'rapid7'
Version = '1.0.1'
Description = 'Control Docker Images, Containers, and Networks'


class ICONDockerEngine(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.ContainerKill())

        self.add_action(actions.ContainerList())

        self.add_action(actions.ContainerLogs())

        self.add_action(actions.ContainerRemove())

        self.add_action(actions.ContainerStop())

        self.add_action(actions.ImageList())

        self.add_action(actions.NetworkDisconnect())

        self.add_action(actions.NetworkGet())

        self.add_action(actions.NetworkList())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONDockerEngine())
    cli.run()


if __name__ == "__main__":
    main()
