#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "Red Canary"
Vendor = "rapid7"
Version = "2.1.6"
Description = "The RedCanary plugin allows you to manage endpoint detection and respond to threats"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import komand
    from komand_red_canary import connection, actions, triggers

    class ICONRedCanary(komand.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_trigger(triggers.NewActivityMonitorMatches())

            self.add_trigger(triggers.NewDetections())

            self.add_trigger(triggers.NewEvents())

            self.add_action(actions.AcknowledgeDetection())

            self.add_action(actions.CreateActivityMonitor())

            self.add_action(actions.DeactivateActivityMonitor())

            self.add_action(actions.GetActivityMonitor())

            self.add_action(actions.GetEvent())

            self.add_action(actions.ListActivityMonitors())

            self.add_action(actions.ListAllActivityMonitorMatches())

            self.add_action(actions.RetrieveIndicators())

            self.add_action(actions.SearchForEndpointHostnameUsages())

            self.add_action(actions.SearchForIpAddressUsages())

            self.add_action(actions.SearchForMacAddressUsages())

            self.add_action(actions.UpdateRemediationState())


    """Run plugin"""
    cli = komand.CLI(ICONRedCanary())
    cli.run()


if __name__ == "__main__":
    main()
