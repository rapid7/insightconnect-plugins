#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_datadog import connection, actions, triggers


Name = 'Datadog'
Vendor = 'rapid7'
Version = '1.1.2'
Description = 'Datadog is a monitoring service for cloud-scale applications, providing monitoring of servers, databases, tools, and services, through a SaaS-based data analytics platform. Datadog plugin users can post events and metrics'


class ICONDatadog(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.PostEvent())

        self.add_action(actions.PostMetrics())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONDatadog())
    cli.run()


if __name__ == "__main__":
    main()
