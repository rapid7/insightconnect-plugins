#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_pastebin import connection, actions, triggers


Name = 'Pastebin'
Vendor = 'rapid7'
Version = '1.0.1'
Description = 'The Pastebin plugin allows you to send text to and check posts on Pastebin'


class ICONPastebin(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_trigger(triggers.Scraping())

        self.add_action(actions.Post())

        self.add_action(actions.Scrape())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONPastebin())
    cli.run()


if __name__ == "__main__":
    main()
