Description = "Automate the management of watched domains and alerting using the Darktrace plugin"


class ICONDarktrace(insightconnect_plugin_runtime.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name, 
                vendor=Vendor, 
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.UpdateWatchedDomains())


def main():
    """Run plugin"""
    cli = insightconnect_plugin_runtime.CLI(ICONDarktrace())
    cli.run()


if __name__ == "__main__":
    main()
