#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_pdf_generator import connection, actions, triggers


Name = 'PDF Generator'
Vendor = 'rapid7'
Version = '1.0.1'
Description = 'The PDF plugin allows the user to create PDF reports from workflow data'


class ICONPdfGenerator(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.GeneratePdf())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONPdfGenerator())
    cli.run()


if __name__ == "__main__":
    main()
