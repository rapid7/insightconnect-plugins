#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "Check Point SandBlast"
Vendor = "rapid7"
Version = "1.0.3"
Description = "The Check Point SandBlast plugin extends the SandBlast service and enables report status and suspicious file upload"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import komand
    from komand_checkpoint_sand_blast import connection, actions, triggers

    class ICONCheckpointSandBlast(komand.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_action(actions.QueryReport())

            self.add_action(actions.Upload())


    """Run plugin"""
    cli = komand.CLI(ICONCheckpointSandBlast())
    cli.run()


if __name__ == "__main__":
    main()
