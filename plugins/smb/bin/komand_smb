#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "SMB"
Vendor = "rapid7"
Version = "2.0.0"
Description = "Server Message Block (SMB) is a protocol used for interacting with files on an SMB server. Using this plugin, users can interact with shares and delete files"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import komand
    from komand_smb import connection, actions, triggers

    class ICONSmb(komand.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_action(actions.CreateFile())

            self.add_action(actions.DeleteFile())

            self.add_action(actions.DeleteFiles())

            self.add_action(actions.DownloadFile())

            self.add_action(actions.Echo())

            self.add_action(actions.GetAttributes())

            self.add_action(actions.ListShareFiles())

            self.add_action(actions.ListShares())


    """Run plugin"""
    cli = komand.CLI(ICONSmb())
    cli.run()


if __name__ == "__main__":
    main()
