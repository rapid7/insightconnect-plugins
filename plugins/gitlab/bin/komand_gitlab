#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_gitlab import connection, actions, triggers


Name = 'GitLab'
Vendor = 'rapid7'
Version = '1.0.1'
Description = 'GitLab plugin allows user management and issue management in Gitlab'


class ICONGitlab(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_trigger(triggers.Issue())

        self.add_action(actions.BlockUser())

        self.add_action(actions.CreateIssue())

        self.add_action(actions.DeleteSsh())

        self.add_action(actions.DeleteUser())

        self.add_action(actions.GetUser())

        self.add_action(actions.ListSsh())

        self.add_action(actions.UnblockUser())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONGitlab())
    cli.run()


if __name__ == "__main__":
    main()
