#!/usr/bin/env python
# GENERATED BY INSIGHT-PLUGIN - DO NOT EDIT
import os
import json
from sys import argv

Name = "Sublime Security"
Vendor = "edubs_rapid7"
Version = "0.1.0"
Description = "A plugin to interact with Sublime Security API"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import insightconnect_plugin_runtime
    from icon_sublime_security import connection, actions, triggers, tasks

    class ICONSublimeSecurity(insightconnect_plugin_runtime.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_action(actions.AnalyzeRawMessage())
        
            self.add_action(actions.CreateMessage())
        
            self.add_action(actions.RetrieveMessage())
        
            self.add_action(actions.AnalyzeMessageById())
        

    """Run plugin"""
    cli = insightconnect_plugin_runtime.CLI(ICONSublimeSecurity())
    cli.run()


if __name__ == "__main__":
    main()
