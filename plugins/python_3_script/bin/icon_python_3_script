            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_action(actions.Run())
        

    """Run plugin"""
    cli = insightconnect_plugin_runtime.CLI(ICONPython3Script())
    cli.run()


if __name__ == "__main__":
    main()
