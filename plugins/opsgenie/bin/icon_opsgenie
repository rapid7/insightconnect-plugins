#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "Opsgenie"
Vendor = "rapid7"
Version = "1.1.1"
Description = "Notify the right people, reduce response time, and avoid alert fatigue with Opsgenie"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import insightconnect_plugin_runtime
    from icon_opsgenie import connection, actions, triggers

    class ICONOpsgenie(insightconnect_plugin_runtime.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_action(actions.CloseAlert())

            self.add_action(actions.CreateAlert())

            self.add_action(actions.GetAlert())

            self.add_action(actions.GetOnCalls())


    """Run plugin"""
    cli = insightconnect_plugin_runtime.CLI(ICONOpsgenie())
    cli.run()


if __name__ == "__main__":
    main()
