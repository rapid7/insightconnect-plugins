#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "Palo Alto Wildfire"
Vendor = "rapid7"
Version = "2.0.0"
Description = "Perform malware analysis with Palo Alto Wildfire"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import komand
    from komand_paloalto_wildfire import connection, actions, triggers

    class ICONPaloaltoWildfire(komand.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_action(actions.GetMalwareTestFile())

            self.add_action(actions.GetPcap())

            self.add_action(actions.GetReport())

            self.add_action(actions.GetSample())

            self.add_action(actions.GetVerdict())

            self.add_action(actions.SubmitFile())

            self.add_action(actions.SubmitFileFromUrl())

            self.add_action(actions.SubmitUrl())


    """Run plugin"""
    cli = komand.CLI(ICONPaloaltoWildfire())
    cli.run()


if __name__ == "__main__":
    main()
