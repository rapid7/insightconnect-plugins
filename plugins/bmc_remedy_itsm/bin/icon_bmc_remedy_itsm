Name = 'BMC Remedy ITSM'
Vendor = 'rapid7'
Version = '1.7.1'
Description = 'Create update and close BMC Remedy ITSM Incidents'


class ICONBmcRemedyItsm(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name, 
                vendor=Vendor, 
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_trigger(triggers.NewIncidentFound())

        self.add_action(actions.AddIncidentWorkNote())

        self.add_action(actions.AssignIncident())

        self.add_action(actions.CloseIncident())

        self.add_action(actions.CreateIncident())

        self.add_action(actions.GetIncidentInformation())

        self.add_action(actions.SearchIncident())

        self.add_action(actions.UpdateIncident())

        self.add_action(actions.UpdateIncidentStatus())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONBmcRemedyItsm())
    cli.run()


if __name__ == "__main__":
    main()
