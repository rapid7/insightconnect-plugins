#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "Azure Compute"
Vendor = "rapid7"
Version = "3.0.2"
Description = "Azure Virtual Machines is one of several types of on-demand, scalable computing resources that Azure offers"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import insightconnect_plugin_runtime
    from icon_azure_compute import connection, actions, triggers

    class ICONAzureCompute(insightconnect_plugin_runtime.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_action(actions.AvailabilitySetVm())

            self.add_action(actions.DeleteVm())

            self.add_action(actions.GeneralizedVm())

            self.add_action(actions.InfoVm())

            self.add_action(actions.ListVm())

            self.add_action(actions.RestartVm())

            self.add_action(actions.SaveImageVm())

            self.add_action(actions.SizesVm())

            self.add_action(actions.SizesVmSubscription())

            self.add_action(actions.StartVm())

            self.add_action(actions.StopDeallocateVm())

            self.add_action(actions.StopVm())

            self.add_action(actions.VmInSubscription())


    """Run plugin"""
    cli = insightconnect_plugin_runtime.CLI(ICONAzureCompute())
    cli.run()


if __name__ == "__main__":
    main()
