#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "Solarwinds"
Vendor = "rapid7"
Version = "3.0.0"
Description = "The Solarwinds plugin allows you to start workflows on new incidents, manage incidents, and manage users"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import insightconnect_plugin_runtime
    from komand_samanage import connection, actions, triggers

    class ICONSamanage(insightconnect_plugin_runtime.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_trigger(triggers.NewIncidents())

            self.add_action(actions.AssignIncident())

            self.add_action(actions.AttachIncident())

            self.add_action(actions.ChangeIncidentState())

            self.add_action(actions.CommentIncident())

            self.add_action(actions.CreateIncident())

            self.add_action(actions.CreateUser())

            self.add_action(actions.DeleteIncident())

            self.add_action(actions.DeleteUser())

            self.add_action(actions.GetComments())

            self.add_action(actions.GetIncident())

            self.add_action(actions.ListIncidents())

            self.add_action(actions.ListUsers())

            self.add_action(actions.TagIncident())


    """Run plugin"""
    cli = insightconnect_plugin_runtime.CLI(ICONSamanage())
    cli.run()


if __name__ == "__main__":
    main()
