#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "Azure AD Admin"
Vendor = "rapid7"
Version = "4.1.1"
Description = "Perform administrative operations in Azure AD"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import insightconnect_plugin_runtime
    from icon_azure_ad_admin import connection, actions, triggers

    class ICONAzureAdAdmin(insightconnect_plugin_runtime.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_trigger(triggers.RiskDetection())

            self.add_action(actions.AddUserToGroup())

            self.add_action(actions.AddUserToGroupsById())

            self.add_action(actions.ChangeUserPassword())

            self.add_action(actions.CreateUser())

            self.add_action(actions.DeleteDevice())

            self.add_action(actions.DisableDevice())

            self.add_action(actions.DisableUserAccount())

            self.add_action(actions.EnableDevice())

            self.add_action(actions.EnableUserAccount())

            self.add_action(actions.ForceUserToChangePassword())

            self.add_action(actions.GetDevice())

            self.add_action(actions.GetGroupByName())

            self.add_action(actions.GetUserInfo())

            self.add_action(actions.RemoveUserFromGroup())

            self.add_action(actions.RevokeSignInSessions())

            self.add_action(actions.SearchDevice())

            self.add_action(actions.UpdateUserInfo())


    """Run plugin"""
    cli = insightconnect_plugin_runtime.CLI(ICONAzureAdAdmin())
    cli.run()


if __name__ == "__main__":
    main()
