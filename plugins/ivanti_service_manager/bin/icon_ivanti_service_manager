#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "Ivanti Service Manager"
Vendor = "rapid7"
Version = "2.0.0"
Description = "Ivanti Service Manager is a flexible and complete cloud-optimized, easily scalable and adaptable ITSM solution used for managing and automating ITSM processes"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import insightconnect_plugin_runtime
    from icon_ivanti_service_manager import connection, actions, triggers

    class ICONIvantiServiceManager(insightconnect_plugin_runtime.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_trigger(triggers.NewIncident())

            self.add_action(actions.AddNote())

            self.add_action(actions.CreateIncident())

            self.add_action(actions.CreateServiceRequest())

            self.add_action(actions.DeleteIncident())

            self.add_action(actions.GetIncident())

            self.add_action(actions.SearchIncidents())

            self.add_action(actions.UpdateIncident())


    """Run plugin"""
    cli = insightconnect_plugin_runtime.CLI(ICONIvantiServiceManager())
    cli.run()


if __name__ == "__main__":
    main()
