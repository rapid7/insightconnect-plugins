#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "TheHive"
Vendor = "rapid7"
Version = "2.0.6"
Description = "TheHive is a scalable, open source security incident response solution designed for SOCs & CERTs to collaborate, elaborate, analyze and get their job done. Handle your case management needs with TheHive plugin for Rapid7 InsightConnect"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import komand
    from icon_thehive import connection, actions, triggers

    class ICONThehive(komand.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_action(actions.CloseCase())

            self.add_action(actions.CreateCase())

            self.add_action(actions.CreateCaseObservable())

            self.add_action(actions.CreateCaseTask())

            self.add_action(actions.GetCase())

            self.add_action(actions.GetCases())

            self.add_action(actions.GetUser())


    """Run plugin"""
    cli = komand.CLI(ICONThehive())
    cli.run()


if __name__ == "__main__":
    main()
