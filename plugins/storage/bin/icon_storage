#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from icon_storage import connection, actions, triggers


Name = "Storage"
Vendor = "rapid7"
Version = "1.0.1"
Description = "The Storage plugin is a utility that stores information across loops and workflows"


class ICONStorage(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name, 
                vendor=Vendor, 
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.CheckForVariable())

        self.add_action(actions.DeleteVariable())

        self.add_action(actions.Retrieve())

        self.add_action(actions.Store())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONStorage())
    cli.run()


if __name__ == "__main__":
    main()
