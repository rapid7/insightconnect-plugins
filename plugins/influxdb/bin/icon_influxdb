#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from icon_influxdb import connection, actions, triggers


Name = "InfluxDB"
Vendor = "rapid7"
Version = "1.0.1"
Description = "Query, write, and determine the status of an InfluxDB server"


class ICONInfluxdb(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name, 
                vendor=Vendor, 
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.Ping())

        self.add_action(actions.Query())

        self.add_action(actions.Write())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONInfluxdb())
    cli.run()


if __name__ == "__main__":
    main()
