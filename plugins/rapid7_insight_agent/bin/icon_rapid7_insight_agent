#!/usr/bin/env python
# GENERATED BY INSIGHT-PLUGIN - DO NOT EDIT
import os
import json
from sys import argv

Name = "Rapid7 Insight Agent"
Vendor = "rapid7"
Version = "2.0.1"
Description = "Using the Insight Agent plugin from InsightConnect, you can quarantine, unquarantine and monitor potentially malicious IPs, addresses, hostnames, and devices across your organization"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import insightconnect_plugin_runtime
    from icon_rapid7_insight_agent import connection, actions, triggers, tasks

    class ICONRapid7InsightAgent(insightconnect_plugin_runtime.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_action(actions.QuarantineMultiple())
        
            self.add_action(actions.GetAgentDetails())
        
            self.add_action(actions.Quarantine())
        
            self.add_action(actions.CheckAgentStatus())
        

    """Run plugin"""
    cli = insightconnect_plugin_runtime.CLI(ICONRapid7InsightAgent())
    cli.run()


if __name__ == "__main__":
    main()
