#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "Compression"
Vendor = "rapid7"
Version = "2.0.2"
Description = "The Compression plugin for Rapid7 InsightConnect allows users to compress/decompress files using different Compression algorithms"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import komand
    from komand_compression import connection, actions, triggers

    class ICONCompression(komand.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_action(actions.CompressBytes())

            self.add_action(actions.CreateArchive())

            self.add_action(actions.DecompressBytes())

            self.add_action(actions.ExtractArchive())


    """Run plugin"""
    cli = komand.CLI(ICONCompression())
    cli.run()


if __name__ == "__main__":
    main()
