#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "Mimecast"
Vendor = "rapid7"
Version = "4.1.2"
Description = "Services for email security, archiving and continuity. Protect, manage and archive without compromise"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import komand
    from komand_mimecast import connection, actions, triggers

    class ICONMimecast(komand.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_action(actions.AddGroupMember())

            self.add_action(actions.CreateBlockedSenderPolicy())

            self.add_action(actions.CreateManagedUrl())

            self.add_action(actions.DecodeUrl())

            self.add_action(actions.DeleteGroupMember())

            self.add_action(actions.DeleteManagedUrl())

            self.add_action(actions.FindGroups())

            self.add_action(actions.GetManagedUrl())

            self.add_action(actions.GetTtpUrlLogs())

            self.add_action(actions.PermitOrBlockSender())


    """Run plugin"""
    cli = komand.CLI(ICONMimecast())
    cli.run()


if __name__ == "__main__":
    main()
