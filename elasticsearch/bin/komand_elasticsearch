#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "Elasticsearch"
Vendor = "rapid7"
Version = "2.0.4"
Description = "Distributed Real-Time Search and Analytics Engine"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import komand
    from komand_elasticsearch import connection, actions, triggers

    class ICONElasticsearch(komand.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_trigger(triggers.PollDocuments())

            self.add_action(actions.ClusterHealth())

            self.add_action(actions.IndexDocument())

            self.add_action(actions.SearchDocuments())

            self.add_action(actions.UpdateDocument())


    """Run plugin"""
    cli = komand.CLI(ICONElasticsearch())
    cli.run()


if __name__ == "__main__":
    main()
