#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "AbuseIPDB"
Vendor = "rapid7"
Version = "5.0.3"
Description = "Enables the look up of IP reports, provides list and details of blacklisted IPs, and submissions of abusive IPs"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import komand
    from komand_abuseipdb import connection, actions, triggers

    class ICONAbuseipdb(komand.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_action(actions.CheckCidr())

            self.add_action(actions.CheckIp())

            self.add_action(actions.GetBlacklist())

            self.add_action(actions.ReportIp())


    """Run plugin"""
    cli = komand.CLI(ICONAbuseipdb())
    cli.run()


if __name__ == "__main__":
    main()
