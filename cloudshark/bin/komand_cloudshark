#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_cloudshark import connection, actions, triggers


Name = 'Cloud Shark'
Vendor = 'rapid7'
Version = '1.0.1'
Description = 'CloudShark is an on-premises platform for packet analysis. Users can upload and manage capture files using the CloudShark plugin for Rapid7 InsightConnect'


class ICONCloudshark(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.Delete())

        self.add_action(actions.Download())

        self.add_action(actions.Info())

        self.add_action(actions.Merge())

        self.add_action(actions.Upload())

        self.add_action(actions.UploadUrl())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONCloudshark())
    cli.run()


if __name__ == "__main__":
    main()
