#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_html import connection, actions, triggers


Name = 'HTML'
Vendor = 'rapid7'
Version = '1.2.1'
Description = 'The HTML plugin will validate HTML, convert an HTML document to another format, or strip a HTML document of all tags'


class ICONHtml(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.Docx())

        self.add_action(actions.Epub())

        self.add_action(actions.Html5())

        self.add_action(actions.Markdown())

        self.add_action(actions.Pdf())

        self.add_action(actions.Text())

        self.add_action(actions.Validate())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONHtml())
    cli.run()


if __name__ == "__main__":
    main()
