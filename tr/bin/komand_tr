#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_tr import connection, actions, triggers


Name = 'Translate'
Vendor = 'rapid7'
Version = '2.0.2'
Description = 'Translate or replace characters from text using the tr command line utility'


class ICONTr(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.Replace())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONTr())
    cli.run()


if __name__ == "__main__":
    main()
