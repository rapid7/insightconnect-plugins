import komand
from komand_ping import connection, actions, triggers


Name = 'Ping'
Vendor = 'rapid7'
Version = '1.0.3'
Description = 'Check network connectivity and response times'


class ICONPing(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.Ping())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONPing())
    cli.run()


if __name__ == "__main__":
    main()
