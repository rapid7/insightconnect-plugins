import komand
from komand_aws_ec2 import connection, actions, triggers


Name = 'AWS EC2'
Vendor = 'rapid7'
Version = '1.0.1'
Description = 'Amazon Elastic Compute Cloud (Amazon EC2) provides resizable computing capacity in the Amazon Web Services (AWS) cloud. This plugin allows you to manage your EC2 environment.'


class ICONAwsEc2(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_action(actions.AuthorizeSecurityGroupEgress())

        self.add_action(actions.AuthorizeSecurityGroupIngress())

        self.add_action(actions.DescribeInstances())

        self.add_action(actions.DescribeSecurityGroups())

        self.add_action(actions.RevokeSecurityGroupEgress())

        self.add_action(actions.RevokeSecurityGroupIngress())

        self.add_action(actions.UpdateSecurityGroupRuleDescriptionsEgress())

        self.add_action(actions.UpdateSecurityGroupRuleDescriptionsIngress())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONAwsEc2())
    cli.run()


if __name__ == "__main__":
    main()
