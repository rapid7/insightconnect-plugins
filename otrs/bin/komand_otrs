#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import os
import json
from sys import argv

Name = "OTRS"
Vendor = "rapid7"
Version = "5.0.1"
Description = "Create and manage OTRS tickets"


def main():
    if 'http' in argv:
        if os.environ.get("GUNICORN_CONFIG_FILE"):
            with open(os.environ.get("GUNICORN_CONFIG_FILE")) as gf:
                gunicorn_cfg = json.load(gf)
                if gunicorn_cfg.get("worker_class", "sync") == "gevent":
                    from gevent import monkey
                    monkey.patch_all()
        elif 'gevent' in argv:
            from gevent import monkey
            monkey.patch_all()

    import komand
    from komand_otrs import connection, actions, triggers

    class ICONOtrs(komand.Plugin):
        def __init__(self):
            super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
            )
            self.add_action(actions.Create())

            self.add_action(actions.Retrieve())

            self.add_action(actions.Search())

            self.add_action(actions.Update())


    """Run plugin"""
    cli = komand.CLI(ICONOtrs())
    cli.run()


if __name__ == "__main__":
    main()
