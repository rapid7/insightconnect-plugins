#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_samanage import connection, actions, triggers


Name = 'Samanage'
Vendor = 'rapid7'
Version = '1.0.1'
Description = 'The Samanage plugin allows you to start workflows on new incidents, manage incidents, and manage users'


class ICONSamanage(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name,
                vendor=Vendor,
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_trigger(triggers.NewIncidents())

        self.add_action(actions.AssignIncident())

        self.add_action(actions.AttachIncident())

        self.add_action(actions.ChangeIncidentState())

        self.add_action(actions.CommentIncident())

        self.add_action(actions.CreateIncident())

        self.add_action(actions.CreateUser())

        self.add_action(actions.DeleteUser())

        self.add_action(actions.GetComments())

        self.add_action(actions.GetIncident())

        self.add_action(actions.ListIncidents())

        self.add_action(actions.ListUsers())

        self.add_action(actions.TagIncident())


def main():
    """Run plugin"""
    cli = komand.CLI(ICONSamanage())
    cli.run()


if __name__ == "__main__":
    main()
